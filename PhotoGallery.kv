Display


<Display>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Dogs collection"
        Image:
            id: image
            source: root.displayImage()
            size_hint: 1,3

        BoxLayout:
            Button:
                text: "<<<"
                background_color: "black"
                on_release: root.subImage()



            Button:
                text: ">>>"
                background_color: "black"
                on_release: root.advanceImage()